{
  "name": "decorator",
  "displayName": "Inline Parameters for VSCode",
  "description": "Function parameter annotations displaying inline in VSCode",
  "publisher": "liamhammett",
  "icon": "icon.png",
  "version": "0.2.1",
  "license": "MIT",
  "homepage": "https://github.com/imliam/vscode-decorator",
  "bugs": {
    "url": "https://github.com/imliam/vscode-decorator/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/imliam/vscode-decorator"
  },
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "decorator.toggle",
        "title": "Inline Parameters: Hide / Show"
      }
    ],
    "configuration": [
      {
        "title": "Inline Parameters",
        "properties": {
          "decorator.enabled": {
            "type": "boolean",
            "description": "Show inline parameters",
            "default": true
          },
          "decorator.leadingCharacters": {
            "type": "string",
            "description": "Characters to be shown before each parameter annotation",
            "default": ""
          },
          "decorator.trailingCharacters": {
            "type": "string",
            "description": "Characters to be shown after each parameter annotation",
            "default": ":"
          },
          "decorator.showPhpDollar": {
            "type": "boolean",
            "description": "Show the $ character before PHP parameter names",
            "default": false
          },
          "decorator.hideSingleParameters": {
            "type": "boolean",
            "description": "Hide inline parameters if a function only has 1 parameter",
            "default": false
          },
          "decorator.parameterCase": {
            "type": "string",
            "description": "Forcibly change the case of the inline parameter name",
            "enum": [
              "normal",
              "lowercase",
              "uppercase"
            ],
            "default": "normal"
          },
          "decorator.showVariadicNumbers": {
            "type": "boolean",
            "description": "Show the number of times a variadic parameter has been called",
            "default": true
          },
          "decorator.hideRedundantAnnotations": {
            "type": "boolean",
            "description": "If the value given to a parameter is the same as the parameter name, hide it",
            "default": true
          },
          "decorator.fontWeight": {
            "type": "string",
            "default": "400",
            "enum": [
              "100",
              "200",
              "300",
              "400",
              "500",
              "600",
              "700",
              "800",
              "900"
            ],
            "description": "Annotation styling of font-weight CSS property"
          },
          "decorator.fontStyle": {
            "type": "string",
            "default": "italic",
            "enum": [
              "normal",
              "italic"
            ],
            "description": "Annotation styling of font-style CSS property"
          },
          "decorator.fontSize": {
            "type": "string",
            "default": "0.85em",
            "description": "Annotation styling of font size CSS property"
          },
          "decorator.margin": {
            "type": "string",
            "default": "0.25em",
            "description": "Annotation styling of margin CSS property"
          },
          "decorator.padding": {
            "type": "string",
            "default": "0.25em 0.5em",
            "description": "Annotation styling of padding CSS property"
          },
          "decorator.borderRadius": {
            "type": "string",
            "default": "0.25em",
            "description": "Annotation styling of border-radius CSS property"
          },
          "decorator.border": {
            "type": "string",
            "default": "none",
            "description": "Annotation styling of border CSS property"
          }
        }
      }
    ],
    "colors": [
      {
        "id": "inlineparameters.annotationForeground",
        "description": "Specifies the foreground color for the annotations",
        "defaults": {
          "dark": "#adbec5",
          "light": "#797a79",
          "highContrast": "#adbec5"
        }
      },
      {
        "id": "inlineparameters.annotationBackground",
        "description": "Specifies the background color for the annotations",
        "defaults": {
          "dark": "#1e2c31",
          "light": "#f4f5f4",
          "highContrast": "#1e2c31"
        }
      }
    ],
    "keybindings": [
      {
        "command": "decorator.toggle",
        "key": "ctrl+k a",
        "mac": "cmd+k a"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.2",
    "@types/mocha": "^5.0.0",
    "@types/node": "^12.12.44",
    "@types/vscode": "^1.40.0",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "typescript": "^3.9.5",
    "vscode-test": "^1.2.2"
  },
  "dependencies": {
    "babylon": "^7.0.0-beta.47",
    "install": "^0.13.0",
    "luaparse": "^0.3.0",
    "npm": "^6.14.5",
    "php-parser": "^3.0.0",
    "recast": "^0.16.0"
  }
}
